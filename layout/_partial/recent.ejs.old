<% if (site.posts.length){ %>
<div class="mdl-card mdl-cell mdl-cell--8-col">
    <div class="mdl-layout__container">
        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer has-drawer">
            <div class="mdl-layout__drawer mdl-color--blue-grey-800">
                <span class="mdl-layout-title mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">Recent Post</span>
                <nav class="vertical-navigation mdl-navigation ">
                <% site.posts.sort('date', -1).limit(1).each(function(post){ %>
                <a class="mdl-color-text--blue-grey-400 demo-navigation-link" href="<%- config.root %><%- post.path %>"><%- post.title %></a>
                <% }) %>
                </nav>
            </div>
<!--             <div aria-expanded="false" role="button" tabindex="0" class="mdl-layout__drawer-button"><i class="material-icons"><font><font>î—’</font></font></i></div> -->
<% site.posts.sort('date', -1).limit(1).each(function(post){ %>
            <main class="mdl-layout__content mdl-card">
    <div class="mdl-card__title c1 card-title">
        <h2 class="mdl-card__title-text"><%- post.title %></h2>
    </div>
    <div class="mdl-card__supporting-text">
        <p><%- post.content %></p>
    </div>
        <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="<%- config.root %><%- post.path %>">Read more</a>
        </div>
            </main>
            <% }) %>
        </div>
    </div>
</div>
<% } %>